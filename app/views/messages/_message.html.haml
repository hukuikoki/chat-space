%ul.chat__main__body
  %li.chat__main__body__message
    .chat__main__body__message__header
      %p.chat__main__body__message__header--name
        = message.user.name
      %p.chat__main__body__message__header--then
        = message.created_at.strftime("%Y年%m月%d日 %H:%M:%S")
    %p.chat__main__body__message--post
      = message.text
      %br
      - if message.image.present?
        = image_tag message.image.url, class: 'post-image'
